@model LoginModel

@{
    ViewData["Title"] = "Вхід";
}


<h2>Вхід</h2>

<a asp-action="RegisterTeacher" asp-controller="Users">Зареєструвати викладача</a>

<form asp-action="Login" asp-controller="Users" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введіть Email користувача</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введіть пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Увійти" class="btn btn-primary" />
        </div>
    </div>
</form>