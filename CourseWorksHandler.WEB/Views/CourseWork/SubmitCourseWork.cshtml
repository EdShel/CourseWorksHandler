@model CourseWorkSubmissionModel

<h2>Затвердження теми та завдання курсового проекту</h2>

<form asp-action="SubmitCourseWork" asp-controller="CourseWork">
    <input type="hidden" asp-for="StudentId" />
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div>
        <div class="form-group">
            <label asp-for="Theme">Тема проекту</label>
            <input type="text" asp-for="Theme" />
            <span asp-validation-for="Theme" />
        </div>
        <div class="form-group">
            <label asp-for="Task">Детальне завдання</label>
            <input asp-for="Task" />
            <span asp-validation-for="Task" />
        </div>
        <div class="form-group">
            <input type="submit" value="Затвердити" class="btn btn-primary" />
        </div>
    </div>
</form>